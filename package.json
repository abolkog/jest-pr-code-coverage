{
  "name": "jest-pr-code-coverage",
  "version": "1.2.0",
  "description": "Pull request code coverage action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build --source-map --license licenses.txt",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abolkog/jest-pr-code-coverage.git"
  },
  "keywords": [
    "github",
    "actions",
    "jest",
    "pull request",
    "code coverage"
  ],
  "author": "Khalid Elshafie",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abolkog/jest-pr-code-coverage/issues"
  },
  "homepage": "https://github.com/abolkog/jest-pr-code-coverage#readme",
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.1",
    "@types/markdown-table": "^2.0.0",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.40.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "markdown-table": "^2.0.0"
  },
  "lint-staged": {
    "src/**/*.(ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
